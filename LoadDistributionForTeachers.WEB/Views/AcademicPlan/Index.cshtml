@model IEnumerable<LoadDistributionForTeachers.WEB.Models.AcademicPlanViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <div class="btn-group">
        @Html.ActionLink("Create Academic Plan", "CreateAcademicPlan", "AcademicPlan", null, new { @class = "btn btn-primary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GroupCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NameOfSpecialty)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GroupCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NameOfSpecialty)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Delete", "DeleteAcademicPlan", new { id=item.Id })
        </td>
    </tr>
}

</table>
