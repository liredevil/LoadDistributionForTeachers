@model IEnumerable<LoadDistributionForTeachers.WEB.Models.LoadSubgroupViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <div class="btn-group">
        @Html.ActionLink("Добавить групповую нагрузку", "CreateLoad", "LoadSubgroup", null, new { @class = "btn btn-primary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DisciplineName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfHoursOfLectures)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfHoursOfPractice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroupNumber)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DisciplineName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfHoursOfLectures)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfHoursOfPractice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GroupNumber)
        </td>
        <td>
            @Html.ActionLink("Удалить", "DeleteLoad", new { id=item.Id })
        </td>
    </tr>
}

</table>
