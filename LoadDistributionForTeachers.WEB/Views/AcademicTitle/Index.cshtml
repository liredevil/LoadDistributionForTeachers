@model IEnumerable<LoadDistributionForTeachers.WEB.Models.AcademicTitleViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Список ученых званий</h2>

<p>
    <div class="btn-group">
        @Html.ActionLink("Добавить ученое звание", "CreateAcademicTitle", "AcademicTitle", null, new { @class = "btn btn-primary" })
    </div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            @Html.ActionLink("Удалить", "DeleteAcademicTitle", new { id=item.Id })
        </td>
    </tr>
}

</table>
